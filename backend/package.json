{
  "name": "sgmm-backend",
  "version": "1.0.0",
  "description": "Sistema de Gestión de Gastos Médicos Mayores - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev:up": "docker-compose -f ../docker-compose.dev.yml up -d postgres redis backend frontend",
    "dev:down": "docker-compose -f ../docker-compose.dev.yml down",
    "dev:restart:frontend": "docker-compose -f ../docker-compose.dev.yml up -d --build frontend",
    "prod:up": "docker-compose -f ../docker-compose.yml up -d",
    "prod:restart:frontend": "docker-compose -f ../docker-compose.yml up -d --build frontend",
    "health": "curl -s http://localhost:8080/api/health || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "prepare": "husky install"
  },
  "keywords": [
    "sgmm",
    "api",
    "fastify",
    "prisma",
    "typescript"
  ],
  "author": "JonahatanSR <jonahatan.angeles@segfried.com.mx>",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/passport": "^3.0.2",
    "@fastify/session": "^10.9.0",
    "@fastify/static": "^7.0.4",
    "@node-saml/passport-saml": "^5.1.0",
    "@prisma/client": "^5.22.0",
    "@types/passport": "^1.0.17",
    "@types/passport-saml": "^1.1.7",
    "@types/xml2js": "^0.4.14",
    "bcrypt": "^5.1.1",
    "connect-redis": "^9.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.4",
    "passport": "^0.7.0",
    "pino-pretty": "^11.3.0",
    "prisma": "^5.22.0",
    "puppeteer": "^24.25.0",
    "redis": "^5.8.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/connect-redis": "^0.0.23",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
