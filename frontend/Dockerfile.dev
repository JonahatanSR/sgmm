FROM node:20-alpine

WORKDIR /app

# Install dependencies first (mejor caching)
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose port for Vite dev server
EXPOSE 8080

# Health check sin curl (usa Node para hacer una peticiÃ³n HTTP)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "const http=require('http');const req=http.request({host:'localhost',port:8080,path:'/'},res=>{process.exit(res.statusCode===200?0:1)});req.on('error',()=>process.exit(1));req.end();"

# Development mode with hot reload
CMD ["npm", "run", "dev"]


